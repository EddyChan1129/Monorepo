{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "packages/src/**/*",
    "packages/src/**/*.vue",
    "packages/src/**/**/*.vue",
    "packages/src/**/*",
    "packages/src/**/*.ts",
    "packages/src/**/**/*.ts",
    "projects/src/**/*",
    "projects/src/**/*.vue",
    "projects/src/**/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
