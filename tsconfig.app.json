{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "packages/src/**/*",
    "packages/src/**/*.vue",
    "packages/src/**/**/*.vue",
    "packages/components/**/*",
    "packages/components/**/*.vue",
    "packages/components/**/**/*.vue",
    "packages/components/**/**/*.ts",
    "packages/store/**/*",
    "packages/store/**/*.ts",
    "packages/store/**/*.vue",
    "packages/store/**/**/*.ts",
    "packages/store/**/**/*.vue",
    "packages/hook/**/*",
    "packages/hook/**/*.ts",
    "packages/hook/**/*.vue",
    "packages/hook/**/**/*.ts",
    "packages/hook/**/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
